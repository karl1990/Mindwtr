{
  "expo": {
    "name": "Mindwtr",
    "slug": "mindwtr",
    "version": "0.6.21",
    "orientation": "default",
    "icon": "./assets/images/icon.png",
    "scheme": "mindwtr",
    "userInterfaceStyle": "automatic",
    "jsEngine": "hermes",
    "newArchEnabled": true,
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "tech.dongdongbh.mindwtr",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "Mindwtr uses the microphone to capture voice notes.",
        "ITSAppUsesNonExemptEncryption": false
      },
      "buildNumber": "4"
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/android-icon-foreground.png",
        "backgroundImage": "./assets/images/android-icon-background.png",
        "monochromeImage": "./assets/images/android-icon-monochrome.png"
      },
      "versionCode": 41,
      "package": "tech.dongdongbh.mindwtr",
      "permissions": [
        "RECORD_AUDIO",
        "POST_NOTIFICATIONS"
      ],
      "blockedPermissions": [
        "android.permission.CAMERA",
        "android.permission.FOREGROUND_SERVICE_MEDIA_PLAYBACK",
        "android.permission.SYSTEM_ALERT_WINDOW",
        "android.permission.READ_EXTERNAL_STORAGE",
        "android.permission.WRITE_EXTERNAL_STORAGE"
      ],
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false
    },
    "web": {
      "output": "static",
      "favicon": "./assets/images/favicon.png"
    },
    "plugins": [
      "./plugins/expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/splash-icon.png",
          "imageWidth": 132,
          "resizeMode": "contain",
          "backgroundColor": "#f4f6fb",
          "dark": {
            "backgroundColor": "#0b1020"
          }
        }
      ],
      [
        "./plugins/react-native-android-widget",
        {
          "widgets": [
            {
              "name": "TasksWidget",
              "label": "Mindwtr",
              "description": "Inbox, focus, and quick capture",
              "minWidth": "250dp",
              "minHeight": "250dp",
              "targetCellWidth": 3,
              "targetCellHeight": 3,
              "resizeMode": "horizontal|vertical",
              "previewImage": "./assets/images/widget-preview.png"
            }
          ]
        }
      ],
      [
        "./plugins/abi-splits",
        {
          "architectures": [
            "arm64-v8a",
            "armeabi-v7a"
          ],
          "enableMinifyInReleaseBuilds": true,
          "enableShrinkResourcesInReleaseBuilds": true,
          "useLegacyPackaging": true
        }
      ],
      [
        "expo-share-intent",
        {
          "androidIntentFilters": [
            "text/*"
          ],
          "disableIOS": true
        }
      ],
      [
        "expo-build-properties",
        {
          "android": {
            "minSdkVersion": 24
          }
        }
      ],
      "./plugins/ios-widgets-and-shortcuts",
      [
        "expo-calendar",
        {
          "calendarPermission": "Mindwtr needs calendar access to show your events alongside tasks."
        }
      ],
      "expo-secure-store",
      "./plugins/android-app-shortcuts",
      "./plugins/android-manifest-fixes",
      "./plugins/android-startup-trace",
      "./plugins/patch-alarm-notification-gradle"
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {},
      "eas": {
        "projectId": "b50c904d-6a26-481c-b9bf-b1e2d57fccad"
      }
    },
    "owner": "dongdongbh"
  }
}

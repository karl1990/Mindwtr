{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "core:app:allow-set-app-theme",
    "core:window:allow-close",
    "core:window:allow-set-decorations",
    "dialog:default",
    "fs:default",
    "fs:allow-mkdir",
    "fs:allow-write-file",
    "fs:allow-read-file",
    "fs:allow-write-text-file",
    "fs:allow-remove",
    "fs:allow-exists",
    "fs:allow-size",
    "fs:allow-watch",
    "global-shortcut:default",
    "shell:default",
    "shell:allow-open",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "$DATA/mindwtr"
        },
        {
          "path": "$DATA/mindwtr/**"
        },
        {
          "path": "$APPDATA"
        },
        {
          "path": "$APPDATA/**"
        },
        {
          "path": "$DATA/mindwtr/audio-captures/**"
        },
        {
          "path": "$DATA/mindwtr/whisper-models/**"
        },
        {
          "path": "$HOME"
        },
        {
          "path": "$HOME/**"
        }
      ]
    },
    {
      "identifier": "http:default",
      "allow": [
        {
          "url": "https://*/*"
        },
        {
          "url": "https://*:*/*"
        },
        {
          "url": "http://*/*"
        },
        {
          "url": "http://*:*/*"
        }
      ]
    }
  ]
}
